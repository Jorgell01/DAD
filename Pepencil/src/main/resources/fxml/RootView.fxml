<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <VBox prefHeight="30.0" BorderPane.alignment="CENTER">
            <children>
                <MenuBar>
                    <menus>
                        <Menu mnemonicParsing="false" text="Archivo">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#onNewAction" text="Nuevo">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="N" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator></MenuItem>
                        <MenuItem mnemonicParsing="false" onAction="#onOpenAction" text="Abrir...">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="A" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" onAction="#onSaveAction" text="Guardar">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="G" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" onAction="#onSaveAsAction" text="Guardar como" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" onAction="#onExitAction" text="Salir">
                           <accelerator>
                              <KeyCodeCombination alt="DOWN" code="F4" control="UP" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator>
                        </MenuItem>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Editar">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Copiar" />
                        <MenuItem mnemonicParsing="false" text="Cortar" />
                        <MenuItem mnemonicParsing="false" text="Pegar" />
                        <MenuItem mnemonicParsing="false" text="Deshacer" />
                        <MenuItem mnemonicParsing="false" text="Rehacer" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Ayuda">
                            <items>
                                <MenuItem mnemonicParsing="false" text="About" />
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <HBox spacing="5.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#onNewAction">
                            <tooltip>
                                <Tooltip text="Nuevo archivo" />
                            </tooltip>
                            Nuevo
                        </Button>
                        <Button mnemonicParsing="false" onAction="#onOpenAction">
                            <tooltip>
                                <Tooltip text="Abrir carpeta" />
                            </tooltip>
                            Abrir
                        </Button>
                        <Button mnemonicParsing="false" onAction="#onSaveAction">
                            <tooltip>
                                <Tooltip text="Guardar proyecto" />
                            </tooltip>
                            Guardar
                        </Button>
                        <Button mnemonicParsing="false" onAction="#onCloseAction">
                            <tooltip>
                                <Tooltip text="Cerrar esta ventana" />
                            </tooltip>
                            Cerrar
                        </Button>
                        <Button mnemonicParsing="false" onAction="#onCloseAllAction">
                            <tooltip>
                                <Tooltip text="Cerrar todas las ventanas" />
                            </tooltip>
                            Cerrar todo
                        </Button>
                        <Separator orientation="VERTICAL" prefHeight="200.0" />
                        <Button mnemonicParsing="false" onAction="#onCopyAction">
                            <tooltip>
                                <Tooltip text="Copiar" />
                            </tooltip>
                            Copiar
                        </Button>
                        <Button mnemonicParsing="false" onAction="#onCutAction">
                            <tooltip>
                                <Tooltip text="Cortar" />
                            </tooltip>
                            Cortar
                        </Button>
                        <Button mnemonicParsing="false" onAction="#onPasteAction">
                            <tooltip>
                                <Tooltip text="Pegar" />
                            </tooltip>
                            Pegar
                        </Button>
                        <Button mnemonicParsing="false" onAction="#onUndoAction">
                            <tooltip>
                                <Tooltip text="Deshacer" />
                            </tooltip>
                            Deshacer
                        </Button>
                        <Button mnemonicParsing="false" onAction="#onDoAction">
                            <tooltip>
                                <Tooltip text="Rehacer" />
                            </tooltip>
                            Rehacer
                        </Button>
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </top>
    <center>
        <TabPane fx:id="editionTabPane" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="ALL_TABS" BorderPane.alignment="CENTER">
            <tabs>
                <Tab text="Untitled Tab 1">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                    </content>
                </Tab>
                <Tab text="Untitled Tab 2">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>
